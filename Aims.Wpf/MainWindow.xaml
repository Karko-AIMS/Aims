<Window x:Class="Aims.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AIMS WPF Client"
        Height="560"
        Width="960"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with gradient -->
        <Border Grid.Row="0"
        Background="{StaticResource PrimaryGradientBrush}"
        CornerRadius="12"
        Padding="24,16"
        Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Direction="270" Color="#000000" Opacity="0.15"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="AIMS"/>
          
                </StackPanel>

                <!-- Right: KAR logo -->
                <Image Grid.Column="1"
               Width="64"
               Height="64"
               Margin="16,0,0,0"
               VerticalAlignment="Center"
               Stretch="Uniform"
               Source="/Assets/[공통] 케이에이알_로고_white.png"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Login Card -->
            <StackPanel Grid.Column="0">

                <!-- Login GroupBox -->
                <GroupBox Header="Login" Style="{StaticResource ModernGroupBoxStyle}">
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Email -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="Email"/>
                        <TextBox x:Name="EmailBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}" TextChanged="EmailBox_TextChanged" Text="sadasd"/>

                        <!-- Password -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="Password"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Grid.Row="1" Grid.Column="1"
                                     Height="40"
                                     Margin="0,0,0,16"
                                     Style="{StaticResource ModernPasswordBoxStyle}" Password="asdasd"/>

                        <!-- Checkboxes -->
                        <StackPanel Grid.Row="2" Grid.Column="1"
                                    Orientation="Vertical"
                                    Margin="0,0,0,20">
                            <CheckBox x:Name="RememberMeCheckBox"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Margin="0,0,0,10"
                                      Content="Remember me (save Email)"/>

                            <CheckBox x:Name="AutoLoginCheckBox"
                                      Style="{StaticResource ModernCheckBoxStyle}"
                                      Content="Auto login (start in login)"
                                      IsEnabled="False"/>
                        </StackPanel>

                        <!-- Login Button -->
                        <Button x:Name="LoginButton"
                                Grid.Row="3" Grid.Column="1"
                                Width="140"
                                Height="42"
                                HorizontalAlignment="Left"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Content="Login"
                                Click="LoginButton_Click"/>
                    </Grid>
                </GroupBox>

                <!-- Admin Shortcuts -->
                <GroupBox x:Name="AdminShortcutsGroup"
                          Header="Admin Shortcuts"
                          Style="{StaticResource ModernGroupBoxStyle}"
                          Margin="0,16,0,0"
                          Visibility="Collapsed">
                    <StackPanel Margin="16">
                        <Button x:Name="OpenRegisterButton"
                                Width="200"
                                Height="42"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="Open Register"
                                Click="OpenRegisterButton_Click"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>

            <!-- RIGHT: Quick Test + Log -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Quick Test -->
                <GroupBox Grid.Row="0"
                          Header="Quick Test"
                          Style="{StaticResource ModernGroupBoxStyle}">
                    <Grid Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="PingButton"
                                Grid.Column="0"
                                Width="120"
                                Height="40"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="Ping"
                                Click="PingButton_Click"/>

                        <Border Grid.Column="1"
                                Margin="16,0,0,0"
                                Background="#F0F9FF"
                                CornerRadius="6"
                                Padding="12,8"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="ResultText"
                                       Style="{StaticResource BodyText}"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Log -->
                <GroupBox Grid.Row="1"
                          Header="Log"
                          Style="{StaticResource ModernGroupBoxStyle}"
                          Margin="0,16,0,0">
                    <Border Margin="12"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <TextBox x:Name="LogText"
                                 Padding="12"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
