<Window x:Class="Aims.Wpf.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register User (Admin)"
        Height="480"
        Width="560"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryGradientBrush}"
                CornerRadius="10"
                Padding="20,16"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.12"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Register User"/>
                <TextBlock FontSize="12"
                           Foreground="#B3FFFFFF"
                           Margin="0,4,0,0"
                           Text="Admin only - Create a new user account"/>
            </StackPanel>
        </Border>

        <!-- Form Card -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Fields -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Email -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,20"
                               Text="Email"/>
                    <TextBox x:Name="RegEmailBox"
                             Grid.Row="0" Grid.Column="1"
                             Height="42"
                             Margin="0,0,0,20"
                             Style="{StaticResource ModernTextBoxStyle}"/>

                    <!-- Password -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,20"
                               Text="Password"/>
                    <PasswordBox x:Name="RegPasswordBox"
                                 Grid.Row="1" Grid.Column="1"
                                 Height="42"
                                 Margin="0,0,0,20"
                                 Style="{StaticResource ModernPasswordBoxStyle}"/>

                    <!-- OrgId -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,20"
                               Text="OrgId"/>
                    <TextBox x:Name="RegOrgIdBox"
                             Grid.Row="2" Grid.Column="1"
                             Height="42"
                             Margin="0,0,0,20"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="00000000-0000-0000-0000-000000000001"/>

                    <!-- Role -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,0"
                               Text="Role"/>
                    <ComboBox x:Name="RegRoleCombo"
                              Grid.Row="3" Grid.Column="1"
                              Height="42"
                              Style="{StaticResource ModernComboBoxStyle}"
                              SelectedIndex="1">
                        <ComboBoxItem Content="InternalAdmin (0)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Operator (1)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Viewer (2)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                    </ComboBox>
                </Grid>

                <!-- Status Text -->
                <Border Grid.Row="1"
                        Margin="0,20,0,0"
                        Background="#FEF2F2"
                        CornerRadius="6"
                        Padding="12,10"
                        Visibility="{Binding ElementName=StatusText, Path=Text, Converter={x:Null}}">
                    <TextBlock x:Name="StatusText"
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource DangerBrush}"
                               TextWrapping="Wrap"
                               Text=""/>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,24,0,0">
                    <Button Width="120"
                            Height="42"
                            Margin="0,0,12,0"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="Close"
                            Click="CloseButton_Click"/>
                    <Button x:Name="RegisterButton"
                            Width="120"
                            Height="42"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Content="Register"
                            Click="RegisterButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
