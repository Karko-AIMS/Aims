<Window x:Class="Aims.Wpf.VehicleStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle Management" Height="640" Width="1100"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Text="Vehicle Management" />

        <TextBlock x:Name="WhoText"
                   Grid.Row="1"
                   Margin="0,8,0,0"
                   Text=""/>

        <!-- Main content: Vehicle(LEFT) + Admin Register(RIGHT) -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Vehicle CRUD panel -->
            <GroupBox x:Name="VehicleGroup" Grid.Column="0" Header="Vehicles">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"
                                   Text="Search:"/>
                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Height="26"
                                 KeyDown="SearchBox_KeyDown"/>

                        <TextBlock Grid.Column="2"
                                   Margin="16,0,8,0"
                                   VerticalAlignment="Center"
                                   Text="Status:"/>
                        <ComboBox x:Name="StatusFilterCombo"
                                  Grid.Column="3"
                                  Width="100"
                                  Height="26"
                                  SelectedIndex="1"
                                  SelectionChanged="StatusFilterCombo_SelectionChanged">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Inactive"/>
                        </ComboBox>

                        <Button x:Name="RefreshButton"
                                Grid.Column="5"
                                Width="80"
                                Height="26"
                                Content="Refresh"
                                Click="RefreshButton_Click"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid x:Name="VehicleGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              SelectionChanged="VehicleGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code"
                                                Binding="{Binding vehicleCode}"
                                                Width="90"/>
                            <DataGridTextColumn Header="Display Name"
                                                Binding="{Binding displayName}"
                                                Width="130"/>
                            <DataGridTextColumn Header="Manufacturer"
                                                Binding="{Binding manufacturer}"
                                                Width="90"/>
                            <DataGridTextColumn Header="Model"
                                                Binding="{Binding model}"
                                                Width="90"/>
                            <DataGridTextColumn Header="Year"
                                                Binding="{Binding modelYear}"
                                                Width="50"/>
                            <DataGridTextColumn Header="VIN"
                                                Binding="{Binding vin}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Plate"
                                                Binding="{Binding plateNumber}"
                                                Width="80"/>
                            <DataGridCheckBoxColumn Header="Active"
                                                    Binding="{Binding isActive}"
                                                    Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock x:Name="VehicleStatusText" Text=""/>
                        <TextBlock x:Name="CountText" Margin="16,0,0,0" Foreground="Gray"/>
                    </StackPanel>

                    <!-- CRUD Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                        <Button x:Name="CreateButton"
                                Width="80"
                                Height="28"
                                Content="Create"
                                Click="CreateButton_Click"/>
                        <Button x:Name="EditButton"
                                Width="80"
                                Height="28"
                                Margin="8,0,0,0"
                                Content="Edit"
                                IsEnabled="False"
                                Click="EditButton_Click"/>
                        <Button x:Name="DeleteButton"
                                Width="80"
                                Height="28"
                                Margin="8,0,0,0"
                                Content="Delete"
                                IsEnabled="False"
                                Click="DeleteButton_Click"/>
                        <Button x:Name="RestoreButton"
                                Width="80"
                                Height="28"
                                Margin="8,0,0,0"
                                Content="Restore"
                                IsEnabled="False"
                                Visibility="Collapsed"
                                Click="RestoreButton_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- RIGHT: Admin Register panel (InternalAdmin only) -->
            <GroupBox x:Name="AdminRegisterGroup"
                      Grid.Column="2"
                      Header="Admin - Register User"
                      Width="340"
                      Visibility="Collapsed">
                <Grid Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Email"/>
                    <TextBox x:Name="RegEmailBox" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Password"/>
                    <PasswordBox x:Name="RegPasswordBox" Grid.Row="1" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="OrgId"/>
                    <TextBox x:Name="RegOrgIdBox"
                             Grid.Row="2"
                             Grid.Column="1"
                             Height="28"
                             Margin="0,0,0,8"
                             Text="00000000-0000-0000-0000-000000000001"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Role"/>
                    <ComboBox x:Name="RegRoleCombo" Grid.Row="3" Grid.Column="1" Height="28" Margin="0,0,0,8" SelectedIndex="1">
                        <ComboBoxItem Content="InternalAdmin (0)"/>
                        <ComboBoxItem Content="Operator (1)"/>
                        <ComboBoxItem Content="Viewer (2)"/>
                    </ComboBox>

                    <Button x:Name="RegisterButton"
                            Grid.Row="4"
                            Grid.Column="1"
                            Height="32"
                            Width="100"
                            HorizontalAlignment="Left"
                            Content="Register"
                            Click="RegisterButton_Click"/>

                    <TextBlock x:Name="RegisterStatusText"
                               Grid.Row="5"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,12,0,0">
            <Button x:Name="LogoutButton"
                    Height="32"
                    Width="100"
                    Content="Logout"
                    Click="LogoutButton_Click"/>
            <Button x:Name="CloseButton"
                    Height="32"
                    Width="100"
                    Margin="8,0,0,0"
                    Content="Close"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
