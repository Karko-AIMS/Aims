<Window x:Class="Aims.Wpf.VehicleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle"
        Height="580"
        Width="520"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PrimaryGradientBrush}"
                CornerRadius="10"
                Padding="20,16"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.12"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock x:Name="HeaderText"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Create Vehicle"/>
                <TextBlock FontSize="12"
                           Foreground="#B3FFFFFF"
                           Margin="0,4,0,0"
                           Text="Enter vehicle information below"/>
            </StackPanel>
        </Border>

        <!-- Form Card -->
        <Border Grid.Row="1"
                Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Fields -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- VehicleCode (required) -->
                        <StackPanel Grid.Row="0" Grid.Column="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,12,16">
                            <TextBlock Style="{StaticResource LabelText}" Text="Vehicle Code"/>
                            <TextBlock Foreground="{StaticResource DangerBrush}" Text=" *"/>
                        </StackPanel>
                        <TextBox x:Name="VehicleCodeBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MaxLength="64"/>

                        <!-- DisplayName (required) -->
                        <StackPanel Grid.Row="1" Grid.Column="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,12,16">
                            <TextBlock Style="{StaticResource LabelText}" Text="Display Name"/>
                            <TextBlock Foreground="{StaticResource DangerBrush}" Text=" *"/>
                        </StackPanel>
                        <TextBox x:Name="DisplayNameBox"
                                 Grid.Row="1" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MaxLength="120"/>

                        <!-- VIN (optional) -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="VIN"/>
                        <TextBox x:Name="VinBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MaxLength="32"/>

                        <!-- PlateNumber (optional) -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="Plate Number"/>
                        <TextBox x:Name="PlateNumberBox"
                                 Grid.Row="3" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MaxLength="32"/>

                        <!-- Manufacturer (optional) -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="Manufacturer"/>
                        <TextBox x:Name="ManufacturerBox"
                                 Grid.Row="4" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MaxLength="120"/>

                        <!-- Model (optional) -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="Model"/>
                        <TextBox x:Name="ModelBox"
                                 Grid.Row="5" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 MaxLength="120"/>

                        <!-- ModelYear (optional) -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,16"
                                   Text="Model Year"/>
                        <TextBox x:Name="ModelYearBox"
                                 Grid.Row="6" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernTextBoxStyle}"/>

                        <!-- IsActive (edit mode only) -->
                        <TextBlock x:Name="IsActiveLabel"
                                   Grid.Row="7" Grid.Column="0"
                                   Style="{StaticResource LabelText}"
                                   Margin="0,0,12,0"
                                   Text="Active"
                                   Visibility="Collapsed"/>
                        <CheckBox x:Name="IsActiveCheckBox"
                                  Grid.Row="7" Grid.Column="1"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Margin="0,4,0,0"
                                  VerticalAlignment="Center"
                                  Visibility="Collapsed"
                                  Content="Vehicle is active"/>
                    </Grid>
                </ScrollViewer>

                <!-- Status -->
                <Border Grid.Row="1"
                        Margin="0,16,0,0"
                        Background="#FEF2F2"
                        CornerRadius="6"
                        Padding="12,10"
                        x:Name="StatusBorder"
                        Visibility="Collapsed">
                    <TextBlock x:Name="StatusText"
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource DangerBrush}"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Width="110"
                            Height="42"
                            Margin="0,0,12,0"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Content="Cancel"
                            Click="CancelButton_Click"/>
                    <Button x:Name="SaveButton"
                            Width="110"
                            Height="42"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Content="Save"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
