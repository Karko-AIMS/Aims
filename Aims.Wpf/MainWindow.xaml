<Window x:Class="Aims.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AIMS WPF Client" Height="520" Width="920">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Text="AIMS WPF Client" />

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Login -->
            <StackPanel Grid.Column="0" Orientation="Vertical">

                <GroupBox Header="Login">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" Text="Email"/>
                        <TextBox x:Name="EmailBox" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center" Text="Password"/>
                        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Height="28" Margin="0,0,0,6"/>

                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,0,0,10">
                            <CheckBox x:Name="RememberMeCheckBox"
                                      Margin="0,0,0,4"
                                      Content="Remember me (save Email)"/>

                            <CheckBox x:Name="AutoLoginCheckBox"
                                      Content="Auto login (start in login)"
                                      IsEnabled="False"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="LoginButton"
                                    Width="110"
                                    Height="32"
                                    Content="Login"
                                    Click="LoginButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <Border Height="12" Background="Transparent"/>

                <!-- Admin Shortcuts: Admin일 때만 표시 -->
                <GroupBox x:Name="AdminShortcutsGroup"
                          Header="Admin Shortcuts"
                          Visibility="Collapsed">
                    <StackPanel Margin="12">
                        <Button x:Name="OpenRegisterButton"
                                Width="180"
                                Height="32"
                                Content="Open Register"
                                Click="OpenRegisterButton_Click"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>

            <!-- RIGHT: Quick Test + Log -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Quick Test">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="PingButton"
                                Grid.Column="0"
                                Width="120"
                                Height="32"
                                Content="Ping"
                                Click="PingButton_Click"/>

                        <TextBlock x:Name="ResultText"
                                   Grid.Column="1"
                                   Margin="12,6,0,0"/>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="Log" Margin="0,12,0,0">
                    <TextBox x:Name="LogText"
                             Margin="12"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto" />
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
