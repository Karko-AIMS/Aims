<Window x:Class="Aims.Wpf.VehicleStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle Management"
        Height="720"
        Width="1200"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
        Background="{StaticResource PrimaryGradientBrush}"
        CornerRadius="12"
        Padding="24,16"
        Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Direction="270" Color="#000000" Opacity="0.15"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="Vehicle Status"/>
                    <TextBlock x:Name="WhoText"
                       FontSize="13"
                       Foreground="#B3FFFFFF"
                       Margin="0,6,0,0"
                       Text=""/>
                </StackPanel>

                <!-- Right: buttons follow logo, logo pinned to far right -->
                <DockPanel Grid.Column="1"
                   VerticalAlignment="Center"
                   LastChildFill="False">

                    <!-- Logo: always the far right -->
                    <Image DockPanel.Dock="Right"
                           Width="64"
                           Height="44"
                           Margin="16,0,0,0"
                           VerticalAlignment="Center"
                           Stretch="Uniform"
                           Source="/Assets/kar_logo_white.png"/>

                    <!-- Buttons: sit immediately left of the logo -->
                    <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                        <Button x:Name="LogoutButton"
                        Width="100"
                        Height="38"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Background="#FFFFFF"
                        Foreground="#0078D4"
                        BorderThickness="1"
                        BorderBrush="#CCE4F7"
                        Content="Logout"
                        Click="LogoutButton_Click"/>

                        <Button x:Name="CloseButton"
                        Width="100"
                        Height="38"
                        Margin="10,0,0,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Background="#FFFFFF"
                        Foreground="#0078D4"
                        BorderThickness="1"
                        BorderBrush="#CCE4F7"
                        Content="Close"
                        Click="CloseButton_Click"/>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>


        <!-- Main content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Vehicle CRUD panel -->
            <GroupBox x:Name="VehicleGroup"
                      Grid.Column="0"
                      Header="Vehicles"
                      Style="{StaticResource ModernGroupBoxStyle}">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Bar -->
                    <Border Grid.Row="0"
                            Background="#F8FAFC"
                            CornerRadius="8"
                            Padding="16,12"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Style="{StaticResource LabelText}"
                                       Margin="0,0,12,0"
                                       Text="Search:"/>
                            <TextBox x:Name="SearchBox"
                                     Grid.Column="1"
                                     Height="36"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     KeyDown="SearchBox_KeyDown"/>

                            <TextBlock Grid.Column="2"
                                       Style="{StaticResource LabelText}"
                                       Margin="24,0,12,0"
                                       Text="Status:"/>
                            <ComboBox x:Name="StatusFilterCombo"
                                      Grid.Column="3"
                                      Width="120"
                                      Height="36"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectedIndex="1"
                                      SelectionChanged="StatusFilterCombo_SelectionChanged">
                                <ComboBoxItem Content="All" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Active" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Inactive" Style="{StaticResource ModernComboBoxItemStyle}"/>
                            </ComboBox>

                            <Button x:Name="RefreshButton"
                                    Grid.Column="5"
                                    Width="100"
                                    Height="36"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Refresh"
                                    Click="RefreshButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- DataGrid -->
                    <Border Grid.Row="1"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            ClipToBounds="True">
                        <DataGrid x:Name="VehicleGrid"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                  CellStyle="{StaticResource ModernDataGridCellStyle}"
                                  RowStyle="{StaticResource ModernDataGridRowStyle}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  SelectionChanged="VehicleGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code"
                                                    Binding="{Binding vehicleCode}"
                                                    Width="100"/>
                                <DataGridTextColumn Header="Display Name"
                                                    Binding="{Binding displayName}"
                                                    Width="150"/>
                                <DataGridTextColumn Header="Manufacturer"
                                                    Binding="{Binding manufacturer}"
                                                    Width="110"/>
                                <DataGridTextColumn Header="Model"
                                                    Binding="{Binding model}"
                                                    Width="100"/>
                                <DataGridTextColumn Header="Year"
                                                    Binding="{Binding modelYear}"
                                                    Width="60"/>
                                <DataGridTextColumn Header="VIN"
                                                    Binding="{Binding vin}"
                                                    Width="140"/>
                                <DataGridTextColumn Header="Plate"
                                                    Binding="{Binding plateNumber}"
                                                    Width="90"/>
                                <DataGridTemplateColumn Header="Active" Width="70">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding isActive, Converter={x:Null}}"
                                                    CornerRadius="10"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding isActive}"
                                                           FontSize="11"
                                                           FontWeight="Medium"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Status Bar -->
                    <Border Grid.Row="2"
                            Margin="0,12,0,0"
                            Background="#F0F9FF"
                            CornerRadius="6"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="VehicleStatusText"
                                       Style="{StaticResource BodyText}"
                                       Text=""/>
                            <TextBlock x:Name="CountText"
                                       Style="{StaticResource SecondaryText}"
                                       Margin="16,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- CRUD Buttons -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                Margin="0,16,0,0">
                        <Button x:Name="CreateButton"
                                Width="100"
                                Height="40"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Content="Create"
                                Click="CreateButton_Click"/>
                        <Button x:Name="EditButton"
                                Width="100"
                                Height="40"
                                Margin="10,0,0,0"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Content="Edit"
                                IsEnabled="False"
                                Click="EditButton_Click"/>
                        <Button x:Name="DeleteButton"
                                Width="100"
                                Height="40"
                                Margin="10,0,0,0"
                                Style="{StaticResource DangerButtonStyle}"
                                Content="Delete"
                                IsEnabled="False"
                                Click="DeleteButton_Click"/>
                        <Button x:Name="RestoreButton"
                                Width="100"
                                Height="40"
                                Margin="10,0,0,0"
                                Style="{StaticResource SuccessButtonStyle}"
                                Content="Restore"
                                IsEnabled="False"
                                Visibility="Collapsed"
                                Click="RestoreButton_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- RIGHT: Admin Register panel (InternalAdmin only) -->
            <GroupBox x:Name="AdminRegisterGroup"
                      Grid.Column="2"
                      Header="Admin - Register User"
                      Style="{StaticResource ModernGroupBoxStyle}"
                      Width="360"
                      Visibility="Collapsed">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Email -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,16"
                               Text="Email"/>
                    <TextBox x:Name="RegEmailBox"
                             Grid.Row="0" Grid.Column="1"
                             Height="40"
                             Margin="0,0,0,16"
                             Style="{StaticResource ModernTextBoxStyle}"/>

                    <!-- Password -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,16"
                               Text="Password"/>
                    <PasswordBox x:Name="RegPasswordBox"
                                 Grid.Row="1" Grid.Column="1"
                                 Height="40"
                                 Margin="0,0,0,16"
                                 Style="{StaticResource ModernPasswordBoxStyle}"/>

                    <!-- OrgId -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,16"
                               Text="OrgId"/>
                    <TextBox x:Name="RegOrgIdBox"
                             Grid.Row="2" Grid.Column="1"
                             Height="40"
                             Margin="0,0,0,16"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="00000000-0000-0000-0000-000000000001"/>

                    <!-- Role -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Style="{StaticResource LabelText}"
                               Margin="0,0,12,16"
                               Text="Role"/>
                    <ComboBox x:Name="RegRoleCombo"
                              Grid.Row="3" Grid.Column="1"
                              Height="40"
                              Margin="0,0,0,16"
                              Style="{StaticResource ModernComboBoxStyle}"
                              SelectedIndex="1">
                        <ComboBoxItem Content="InternalAdmin (0)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Operator (1)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                        <ComboBoxItem Content="Viewer (2)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                    </ComboBox>

                    <!-- Register Button -->
                    <Button x:Name="RegisterButton"
                            Grid.Row="4"
                            Grid.Column="1"
                            Height="40"
                            Width="120"
                            HorizontalAlignment="Left"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Content="Register"
                            Click="RegisterButton_Click"/>

                    <!-- Status -->
                    <Border Grid.Row="5"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,16,0,0"
                            Background="#F0F9FF"
                            CornerRadius="6"
                            Padding="12,10">
                        <TextBlock x:Name="RegisterStatusText"
                                   Style="{StaticResource BodyText}"
                                   TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
