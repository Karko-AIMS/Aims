<Window x:Class="Aims.Wpf.VehicleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle" Height="420" Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText"
                   Grid.Row="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Text="Create Vehicle"/>

        <!-- Form Fields -->
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- VehicleCode (required, disabled on edit) -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Vehicle Code *"/>
            <TextBox x:Name="VehicleCodeBox"
                     Grid.Row="0" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"
                     MaxLength="64"/>

            <!-- DisplayName (required) -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Display Name *"/>
            <TextBox x:Name="DisplayNameBox"
                     Grid.Row="1" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"
                     MaxLength="120"/>

            <!-- VIN (optional) -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="VIN"/>
            <TextBox x:Name="VinBox"
                     Grid.Row="2" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"
                     MaxLength="32"/>

            <!-- PlateNumber (optional) -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Plate Number"/>
            <TextBox x:Name="PlateNumberBox"
                     Grid.Row="3" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"
                     MaxLength="32"/>

            <!-- Manufacturer (optional) -->
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Manufacturer"/>
            <TextBox x:Name="ManufacturerBox"
                     Grid.Row="4" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"
                     MaxLength="120"/>

            <!-- Model (optional) -->
            <TextBlock Grid.Row="5" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Model"/>
            <TextBox x:Name="ModelBox"
                     Grid.Row="5" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"
                     MaxLength="120"/>

            <!-- ModelYear (optional) -->
            <TextBlock Grid.Row="6" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Model Year"/>
            <TextBox x:Name="ModelYearBox"
                     Grid.Row="6" Grid.Column="1"
                     Height="28" Margin="0,0,0,8"/>

            <!-- IsActive (edit mode only) -->
            <TextBlock x:Name="IsActiveLabel"
                       Grid.Row="7" Grid.Column="0"
                       Margin="0,0,8,8" VerticalAlignment="Center"
                       Text="Active"
                       Visibility="Collapsed"/>
            <CheckBox x:Name="IsActiveCheckBox"
                      Grid.Row="7" Grid.Column="1"
                      Margin="0,4,0,8"
                      VerticalAlignment="Center"
                      Visibility="Collapsed"/>
        </Grid>

        <!-- Status -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Margin="0,8,0,0"
                   Foreground="Red"
                   TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button x:Name="SaveButton"
                    Width="100" Height="32"
                    Content="Save"
                    Click="SaveButton_Click"/>
            <Button Width="100" Height="32"
                    Margin="8,0,0,0"
                    Content="Cancel"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
