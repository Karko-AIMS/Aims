<Window x:Class="Aims.Wpf.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register User (Admin)" Height="360" Width="520"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Text="Register (Admin only)" />

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Email"/>
            <TextBox x:Name="RegEmailBox" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Password"/>
            <PasswordBox x:Name="RegPasswordBox" Grid.Row="1" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="OrgId"/>
            <TextBox x:Name="RegOrgIdBox"
                     Grid.Row="2"
                     Grid.Column="1"
                     Height="28"
                     Margin="0,0,0,8"
                     Text="00000000-0000-0000-0000-000000000001"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Role"/>
            <ComboBox x:Name="RegRoleCombo" Grid.Row="3" Grid.Column="1" Height="28" Margin="0,0,0,8" SelectedIndex="1">
                <ComboBoxItem Content="InternalAdmin (0)"/>
                <ComboBoxItem Content="Operator (1)"/>
                <ComboBoxItem Content="Viewer (2)"/>
            </ComboBox>

            <TextBlock x:Name="StatusText"
                       Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="0,8,0,0"
                       Text=""/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
            <Button x:Name="RegisterButton"
                    Width="110"
                    Height="32"
                    Content="Register"
                    Click="RegisterButton_Click"/>
            <Button Width="110"
                    Height="32"
                    Margin="8,0,0,0"
                    Content="Close"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
